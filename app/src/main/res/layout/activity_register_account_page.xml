<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_all_pages"
    android:layout_height="match_parent"
    tools:context=".Ui.RegisterAccountPage">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_weight=".5"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_weight=".3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                style="@style/textTitle"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="left"
                android:text="Welcome"
                android:textColor="#F18303"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                style="@style/textTitle"
                android:textSize="35sp"
                android:textStyle="bold"
                android:gravity="left"
                android:text="Back"
                android:textColor="#F18303"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                style="@style/textTitle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="left"
                android:text="Sign in to continue"
                android:textColor="#989898"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.cardview.widget.CardView
            android:layout_weight=".5"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:backgroundTint="#252A39"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:weightSum="3"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_weight=".5"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:textColorHint="#515151"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:passwordToggleEnabled="true"
                    android:textColorHint="#515151"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_weight=".5"
                        android:textSize="15sp"
                        android:hint="Password"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:background="@null"
                    android:fontFamily="@font/roboto"
                    android:textAllCaps="false"
                    android:text="forgot password?"
                    android:layout_gravity="end"
                    android:textColor="#515151"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_marginVertical="15dp"
                    android:layout_weight=".3"
                    android:text="SIGN IN"
                    android:textStyle="bold"
                    android:textColor="@color/bg_all_pages"
                    style="@style/textTitle"
                    android:background="@drawable/bg_roudrd_search"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="bottom"
                    android:text="Don't have an account? Sign up"
                    style="@style/textFont"
                    android:textColor="#515151"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>